<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="com.example.clinica_app.CalendarioController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" alignment="CENTER">

    <Label text="Selecione os dias da semana e horários" GridPane.columnSpan="8" GridPane.rowIndex="0"/>

    <!-- Dias da Semana -->
    <Label text="Horário" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="Segunda" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Terça" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Label text="Quarta" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    <Label text="Quinta" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
    <Label text="Sexta" GridPane.rowIndex="1" GridPane.columnIndex="5"/>

    <!-- Horários com CheckBoxes -->
    <Label text="08:00" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <CheckBox fx:id="cbMon08" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <CheckBox fx:id="cbTue08" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <CheckBox fx:id="cbWed08" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
    <CheckBox fx:id="cbThu08" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
    <CheckBox fx:id="cbFri08" GridPane.rowIndex="2" GridPane.columnIndex="5"/>

    <!-- Adicione mais horários conforme necessário -->

    <Button text="Salvar" onAction="#salvarHorarios" GridPane.rowIndex="10" GridPane.columnSpan="8"/>
</GridPane>

